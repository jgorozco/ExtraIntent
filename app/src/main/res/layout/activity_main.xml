<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
            android:text="Send Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendData"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/spSerializeType"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/sendData"
            app:layout_constraintVertical_bias="1.0" android:minWidth="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/sendData"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/spDataToSend"
            app:layout_constraintTop_toBottomOf="@+id/sendData" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sendData" android:minWidth="200dp"/>
    <Button
            android:text="automate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/automate"
            app:layout_constraintTop_toBottomOf="@+id/sendData" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>